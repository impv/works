---
import "@/styles/variables.css";

interface Props {
  as?: string;
  variant?: "display" | "title-large" | "title-medium" | "title-small" | "body-large" | "body-medium" | "body-small" | "caption";
  bold?: boolean;
  class?: string;
  color?: "default" | "subtle" | "muted" | "inverted" | "disabled" | "accent" | "success" | "attention" | "danger";
}

const {
  as = "p",
  variant = "body-medium",
  bold = false,
  color = "default",
  class: className,
  ...props
}: Props = Astro.props;

const Element = as;
---

<Element class:list={[
  className,
  variant,
  { "bold": bold },
  { [`color-${color}`]: color !== "default" },
  "typography",
]} {...props}>
  <slot />
</Element>

<style>
.typography {
  font-family: 'Helvetica', sans-serif;
  line-height: 1.7145;
}

.display {
  font-size: var(--font-size-display);
  font-weight: bold;
  line-height: 1.2;
}

.title-large {
  font-size: var(--font-size-title-large);
  font-weight: normal;
}

.title-medium {
  font-size: var(--font-size-title-medium);
  font-weight: normal;
}

.title-small {
  font-size: var(--font-size-title-small);
  font-weight: normal;
}

.body-large {
  font-size: var(--font-size-body-large);
  font-weight: normal;
}

.body-medium {
  font-size: var(--font-size-body-medium);
  font-weight: normal;
}

.body-small {
  font-size: var(--font-size-body-small);
  font-weight: normal;
}

.caption {
  font-size: var(--font-size-caption);
  font-weight: normal;
}

.bold {
  font-weight: bold;
}

.color-default {
  color: var(--fg-default);
}

.color-subtle {
  color: var(--fg-subtle);
}

.color-muted {
  color: var(--fg-muted);
}

.color-inverted {
  color: var(--fg-inverted);
}

.color-disabled {
  color: var(--fg-disabled);
}

.color-accent {
  color: var(--fg-accent);
}

.color-success {
  color: var(--fg-success);
}

.color-attention {
  color: var(--fg-attention);
}

.color-danger {
  color: var(--fg-danger);
}
</style>