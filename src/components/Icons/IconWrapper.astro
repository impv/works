---
interface Props {
  title?: string;
  class?: string;
}

const {
  title = "",
  class: className = "",
}: Props = Astro.props;
---
<svg viewBox="0 0 24 24" class:list={["icon", className]} aria-labelledby={title} xmlns="http://www.w3.org/2000/svg">
  <title>{title}</title>
  <slot />
</svg>

<style>
.icon {
  width: 1em;
  height: 1em;
  vertical-align: -0.05em;
  fill: currentColor;
  overflow: hidden;
}
</style>
