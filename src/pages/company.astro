---
import ContentPageLayout from "@/layouts/ContentPageLayout.astro";
import CustomTypography from "@/components/CustomTypography/index.astro";
---
<ContentPageLayout title="Company profile">
  <section class="body">
    <CustomTypography as="h1" variant="title-large">Company profile</CustomTypography>

    <section class="profile-table">
      <section class="profile-section">
        <CustomTypography variant="title-small">
          会社名
        </CustomTypography>
        <CustomTypography variant="body-large">
          株式会社インプレッシブ
        </CustomTypography>
      </section>

      <section class="profile-section">
        <CustomTypography variant="title-small">
          所在地
        </CustomTypography>
        <CustomTypography variant="body-large">
          〒151-0063<br />
          東京都渋谷区富ヶ谷2-22-12 ヴィトレ代々木パーク 4F
        </CustomTypography>
      </section>

      <section class="profile-section">
        <CustomTypography variant="title-small">
          設立
        </CustomTypography>
        <CustomTypography variant="body-large">
          2004年01月09日
        </CustomTypography>
      </section>

      <section class="profile-section">
        <CustomTypography variant="title-small">
          役員構成
        </CustomTypography>
        <CustomTypography variant="body-large">
          藤田 洋 (代表取締役社長)<br />
          中野 浩一 (取締役副社長)<br />
          喜田 豪人 (取締役)
        </CustomTypography>
      </section>

      <section class="profile-section">
        <CustomTypography variant="title-small">
          資本金
        </CustomTypography>
        <CustomTypography variant="body-large">
          10,000,000円
        </CustomTypography>
      </section>

      <section class="profile-section">
        <CustomTypography variant="title-small">
          従業員数
        </CustomTypography>
        <CustomTypography variant="body-large">
          18名 (取締役3名含む)
        </CustomTypography>
      </section>

      <section class="profile-section">
        <CustomTypography variant="title-small">
          顧問弁護士
        </CustomTypography>
        <CustomTypography variant="body-large">
          佐々木勝洋法律事務所
        </CustomTypography>
      </section>

      <section class="profile-section">
        <CustomTypography variant="title-small">
          顧問税理士
        </CustomTypography>
        <CustomTypography variant="body-large">
          IXS会計事務所
        </CustomTypography>
      </section>
    </div>
  </section>
</ContentPageLayout>

<style>
.body {
  display: flex;
  flex-direction: column;
  gap: var(--gap-large);
}

.profile {
  display: flex;
  flex-direction: column;
  gap: var(--gap-small);
}

.profile-table {
  border-top: 1px solid var(--border-default);
}

.profile-section {
  display: grid;
  flex-direction: column;
  gap: 1.6rem;
  grid-template-columns: 1fr 3fr;
  padding: 2.4rem 0;
  border-bottom: 1px solid var(--border-default);
}

@media (max-width: 768px) {
  .profile-section {
    grid-template-columns: 1fr;
  }
}
</style>